actor HexenChronicle {
    //$Title "Chronicle"
    //$Category "Obstacles"
    Radius 20
    Height 60

    +SOLID
    +USESPECIAL

    States {
        Spawn:
            CRON A 35
            CRON BCD 5
            CRON E 35
            CRON FGH 5
            CRON I 35
            CRON JKL 5
            Loop
    }
}

actor BloodFont {
    //$Title "Blood Font"

actor LushXmasTree : ZXmasTree {
    //$Title "Lush Evergreen Tree"
    //$Category "Obstacles"
    DeathSound "TreeExplode"

    States {
        Spawn:
            XMS2 A -1
            Stop
        Burn:
            XMS2 B 6 bright
            XMS2 C 6 bright A_Scream
            XMS2 D 5 bright
            XMS2 E 5 bright A_Explode(30, 64)
            XMS2 F 5 bright
            XMAS G 4 bright
            XMAS H 5
            XMAS I 4 A_NoBlocking
            XMAS J 4
            XMAS K -1
            Stop
    }
}

